<html>
<head>
	<title>Veique</title>
	<link href='http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>
	<link rel="stylesheet" type="text/css" href="main.css">
</head>

<body>
	<div class="homepage">
		<div class="nav">
			<div class="brand">
			</div>
			<div class="links">
                     <div hidden="true">
				    <%= (!!locals.user.profile)?user:'' %>
				    </div>
                     <%if( locals.user == ''){%>
				<div onclick="window.location = '/login';" class="hyperlink">Login</div>
				 <%}else{%>
                      <img id="profilepic" src=<%=user.profile.picture%>>
                       <a onclick="window.location = '/account';" class="hyperlinkprofile"><%=user.profile.name%></a>
                   
         
                   <%}%>
				<div class="hyperlink">Become a guide</div>
			</div>
		</div>
		<nav class="container">
			<div class="main-search">
				<form method="post" action"/search.ejs">
				<div class="normal-text">I want to go to</div>
				<div class="normal-text" style="color:#C89777;">
					&nbsp;<input id="location" type="text" placeholder="Rome, Italy"> </input>&nbsp;
					<div class="underline-box"></div>
				</div>
				<div class="normal-text">sometime in</div>
				<div class="normal-text" style="color:#C89777; outline: none;">
		  &nbsp;<select id="selectNumber" contenteditable="true">     
                 <option>Choose a month</option>
				 </select>&nbsp;
				<div class="underline-box"></div>
				</div>
				<div class="normal-text">.
				<button>Lets go</button></div>
				
			 </form>
			</div>
		</nav>
	</div>
	<script src="selectStart.js"></script>
	<script>
var select = document.getElementById("selectNumber");
var options = ["January","February","March","April","May","June","July","August","September","October","November","December"];
for(var i = 0; i < options.length; i++) {
    var opt = options[i];
    var el = document.createElement("option");
    el.textContent = opt;
    el.value = opt;
    select.appendChild(el);
}
</script>
</body>
</html>
